{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib/types",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib/main",
    "strict": true,
    "strictPropertyInitialization": false,
    "composite": true,
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
